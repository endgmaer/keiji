<div class="container">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

  <h3>新規投稿</h3>
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :name, 'name:' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'password:' %>
      <%= f.text_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content, 'content:' %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="text-right">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>

  <h3>検索</h3>
  <%= search_form_for(@q, url: posts_path) do |f| %>
    <div class="input-group">
      <%= f.search_field :content_cont, class: 'form-control' %>
      <span class="input-group-btn">
      <%= f.submit class: 'btn btn-default' %>
      </span>
    </div>
  <% end %>

  <h3>投稿一覧</h3>
  <% @posts.each do |post| %>
    <div class="form-inline">
      <div class="h4">
        <%= post.id %>.
        名前: <%= post.name %>
        投稿日時: <%= post.created_at %>
      </div>
    </div>
    <div class="h5">
      <%= post.content %>
    </div>
    <%= post.password %>
    <%= form_tag post_path(id: post.id), method: :delete do %>
      <div class="form-inline text-right">
        <%= text_field_tag :delete_password, nil, class: 'form-control' %>
        <%= submit_tag '削除', class: 'btn btn-danger' %>
      </div>
    <% end %>
    <br>
  <% end %>
</div>
